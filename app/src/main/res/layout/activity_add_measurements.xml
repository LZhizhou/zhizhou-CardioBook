<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeasurements">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="systolic pressure in mm Hg"

                />

            <EditText
                android:id="@+id/systolic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Systolic Pressue"
                android:inputType="number"
                android:text="" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="diastolic pressure in mm Hg"

                />

            <EditText
                android:id="@+id/diastolic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter diastolic Pressue"
                android:inputType="number"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heart rate in beats per minute"

                />

            <EditText
                android:id="@+id/heartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter heart rate"
                android:inputType="number"
                android:text="" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measure date"

                 />

            <EditText
                android:id="@+id/measureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:text="" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measure time"

                 />

            <EditText
                android:id="@+id/measureTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:text="" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment ( to 20 characters)"

                />

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Enter Comment"
                android:maxLength="20"/>

            <Button
                android:id="@+id/submit_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>